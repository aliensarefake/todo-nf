<h1>New Task</h1>

<%= form_with model: @todo do |form| %>
  <div>
    <%= form.label :title, "Task Title"  %><br>
    <%= form.text_field :title %>
     <% @todo.errors.full_messages_for(:title).each do |message| %>
      <p style="color:red;"><%= message %></p>
    <% end %>
  </div>

  <div>
    <%= form.label :body, "Task Body" %><br>
    <%= form.text_area :body %>
     <% @todo.errors.full_messages_for(:body).each do |message| %>
      <p style="color:red;"><%= message %></p>
    <% end %>
  </div>

  <div>
    <%= form.submit "Create Task"%>
  </div>
<% end %>